n = int(input("Nhập n: "))

# Hình 1: Hình vuông rỗng
print("Hình 1:")
for i in range(n):
    for j in range(n):
        if i == 0 or i == n-1 or j == 0 or j == n-1:
            print("*", end=" ")
        else:
            print(" ", end=" ")
    print()

print()

# Hình 2: Tam giác vuông đặc (góc vuông bên phải)
print("Hình 2:")
for i in range(1, n+1):
    print("  " * (n-i) + "* " * i)

print()


